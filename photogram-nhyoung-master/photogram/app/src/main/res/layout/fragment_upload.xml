<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UploadFragment">

    <ImageView
        android:id="@+id/choose_photo"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:src="@drawable/ic_upload_image"
        android:contentDescription="Button to Upload Image"
        android:padding="30dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="5dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tap above to select an image to upload"
            />

        <EditText
            android:id="@+id/input_caption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Provide a name for your image"
            />

        <Button
            android:id="@+id/upload"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="Upload"
            android:background="#6a0dad"
            android:textColor="#FFFFFF"
            />
    </LinearLayout>


</LinearLayout>